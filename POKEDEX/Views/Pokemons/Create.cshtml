@model POKEDEX.Models.ViewPokemon

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pokemon</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombrePokemon" class="control-label"></label>
                <input asp-for="NombrePokemon" class="form-control" />
                <span asp-validation-for="NombrePokemon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoPokemon" class="control-label"></label>
                <select asp-for="IdTipoPokemon" class="form-control" asp-items="ViewBag.TipoPokemon"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdRegion" class="control-label"></label>
                <select asp-for="IdRegion" class="form-control" asp-items=" ViewBag.Region"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoAtaque" class="control-label"></label>
                <select asp-for="IdTipoAtaque" class="form-control" asp-items="ViewBag.TipoAtaque"></select>

            </div>
            <div class="form-group row">
                <label asp-for="PhotoPokemon" class="col-sm-2 col-form-label" ></label>
                <div class="custom-file">
                    <input asp-for="PhotoPokemon" class="custom-file-input" id="customFile">
                    <label asp-for="PhotoPokemon" class="custom-file-label" for="customFile">Choose file</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
