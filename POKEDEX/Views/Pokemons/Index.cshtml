@model IEnumerable<POKEDEX.Models.Pokemon>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombrePokemon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRegionNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoAtaqueNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipoPokemonNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombrePokemon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdRegionNavigation.NombreRegion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoAtaqueNavigation.IdTipoAtaque)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipoPokemonNavigation.IdTipoPokemon)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPokemon">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPokemon">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPokemon">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
